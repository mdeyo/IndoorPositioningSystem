<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.matthew.indoornav.WifiScanning"
    android:background="@drawable/apollo_bw">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
           android:paddingLeft="10dp"
            android:id="@+id/textView0"
            android:textSize="24dp"
            android:background="@drawable/bar_graph_back"/>


        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:id="@+id/textView1"
            android:textSize="24dp"
            android:background="@drawable/bar_graph_back"/>

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:id="@+id/textView2"
            android:textSize="24dp"
            android:background="@drawable/bar_graph_back"/>

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:id="@+id/textView3"
            android:textSize="24dp"
            android:background="@drawable/bar_graph_back"/>

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:id="@+id/textView4"
            android:text="Scanning for routers..."
            android:textSize="24dp"
            android:background="@drawable/bar_graph_back"/>

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:id="@+id/textView5"
            android:textSize="24dp"
            android:background="@drawable/bar_graph_back"/>

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:id="@+id/textView6"
            android:textSize="24dp"
            android:background="@drawable/bar_graph_back"/>

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:id="@+id/textView7"
            android:textSize="24dp"
            android:background="@drawable/bar_graph_back"/>

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/textView8"
            android:textSize="24dp"
            android:background="@drawable/bar_graph_back"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="220dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:textColor="#fff"
            android:paddingLeft="10dp"
            android:id="@+id/textView0_"
            android:textSize="28dp"/>


        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/textView1_"
            android:textSize="28dp"
            android:textColor="#fff"/>

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:id="@+id/textView2_"
            android:textSize="28dp"
            android:textColor="#fff"/>

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:id="@+id/textView3_"
            android:textSize="28dp"
            android:textColor="#fff"/>

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/textView4_"
            android:textSize="28dp"
            android:textColor="#fff"/>

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:id="@+id/textView5_"
            android:textSize="28dp"
            android:textColor="#fff"/>

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:id="@+id/textView6_"
            android:textSize="28dp"
            android:textColor="#fff"/>

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:id="@+id/textView7_"
            android:textSize="28dp"
            android:textColor="#fff"/>

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:id="@+id/textView8_"
            android:textSize="28dp"
            android:textColor="#fff"/>

        </LinearLayout>

    <TextView
        android:id="@+id/scan_time"
        android:layout_width="130dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="Scan Time:\n \n "
        android:textSize="22dp"
        android:textColor="#fff"
        android:layout_marginRight="42dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/number_of_routers"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textSize="26dp"
        android:textColor="#fff"
        android:layout_marginTop="216dp"
        android:gravity="center"/>

</RelativeLayout>
