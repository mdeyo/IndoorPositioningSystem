<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/blueprints2"
    tools:context="com.example.matthew.indoornav.ChooseBuilding">

    <TextView
        android:text="Build Mode"
        android:id="@+id/building_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="80dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:textColor="@color/text_color1"

        android:layout_alignParentTop="true"/>


    <Button
        android:layout_width="wrap_content"
        android:textColor="@color/text_color1"
        android:layout_height="56dp"
        android:text="Building 33"
        android:id="@+id/button33"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="100dp"
        android:layout_above="@+id/button35"
        android:textSize="30dp"
        android:padding="10dp"
        android:background="@drawable/round_button_outline"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="Building 35"
        android:textColor="@color/text_color1"
        android:layout_above="@+id/button37"
        android:id="@+id/button35"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:padding="10dp"
        android:background="@drawable/round_button_outline"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:text="Building 37"
        android:id="@+id/button37"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="100dp"
        android:padding="10dp"
        android:textColor="@color/text_color1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:textSize="30dp"
        android:background="@drawable/round_button_outline"
        android:layout_marginTop="10dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textColor="@color/text_color1"
        android:text="Wifi Scanning"
        android:padding="10dp"
        android:textSize="20dp"
        android:id="@+id/button_wifi_scanning"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_button_outline"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textColor="@color/text_color1"
        android:text="New Project"
        android:padding="10dp"
        android:textSize="20dp"
        android:id="@+id/new_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/round_button_outline"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/button33"
        android:layout_marginLeft="20dp">

        <ListView
            android:id="@+id/list_projects"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp">
        </ListView>


    </LinearLayout>





</RelativeLayout>
